game {
  title "Noughts and Crosses"
  players [Noughts, Crosses]
  turnOrder [Crosses, Noughts]
  board {
    grid {
      width 3
      height 3
    }
  }
  piece {
    name XOPieces
    possibleDrops emptySquares[board]
  }
  winCondition
    size[findSquares[ /friend 
			(n friend n) | (e friend e) |
			(nw friend nw) | (ne friend ne )
		friend/ ]] != 0
  tieCondition
    isFull[board]
}
